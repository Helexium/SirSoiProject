@model IEnumerable<SirSoiProject.Models.Student>

<h1>List of Students</h1>

<table class="table">
    <thead>
        <tr>
            <th> Student ID </th>
            <th> First Name</th>
            <th> Middle Name</th>
            <th> Last Name</th>
            <th> Year Level</th>
            <th> Gender</th>
            <th> Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <th> @student.StudentID </th>
                <th> @student.FirstName</th>
                <th> @student.MiddleName</th>
                <th> @student.LastName</th>
                <th> @student.YearLevel</th>
                <th> @student.Gender</th>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Student</a>