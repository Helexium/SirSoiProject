@model SirSoiProject.Models.Student

<h1>Edit Student</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StudentID" />
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MiddleName" class="control-label">Middle Name</label>
        <input asp-for="MiddleName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName" class="control-label">Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="YearLevel" class="control-label">Year Level</label>
        <input asp-for="YearLevel" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label">Gender</label>
        <input asp-for="Gender" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>